        "class Restaurant:\n",
        "    \"\"\"Manages restaurant reservations.\n",
        "\n",
        "    This class provides functionality to manage restaurant reservations, including\n",
        "    adding, retrieving, and canceling reservations. It uses a predefined list of\n",
        "    reservations for demonstration purposes.\n",
        "\n",
        "    Attributes:\n",
        "        reservations (list): A list of dictionaries, where each dictionary\n",
        "            represents a reservation with details such as reservation_id,\n",
        "            customer_name, phone, num_people, date, and time.\n",
        "    \"\"\"\n",
        "\n",
        "    def __init__(self):\n",
        "        \"\"\"Initializes the Restaurant object with a list of fake reservations.\"\"\"\n",
        "        self.reservations = [\n",
        "            {\"reservation_id\": \"1001\", \"customer_name\": \"Mario Rossi\", \"phone\": \"3331234567\", \"num_people\": 4, \"date\": \"2024-08-14\", \"time\": \"19:00\"},\n",
        "            {\"reservation_id\": \"1002\", \"customer_name\": \"Giuseppa Verdi\", \"phone\": \"3337654321\", \"num_people\": 2, \"date\": \"2024-08-15\", \"time\": \"20:00\"},\n",
        "            {\"reservation_id\": \"1003\", \"customer_name\": \"Antonio Bianchi\", \"phone\": \"3391234567\", \"num_people\": 3, \"date\": \"2024-08-16\", \"time\": \"21:00\"},\n",
        "            {\"reservation_id\": \"1004\", \"customer_name\": \"Francesca Neri\", \"phone\": \"3349876543\", \"num_people\": 5, \"date\": \"2024-08-17\", \"time\": \"19:30\"},\n",
        "            {\"reservation_id\": \"1005\", \"customer_name\": \"Luigi Esposito\", \"phone\": \"3381239876\", \"num_people\": 2, \"date\": \"2024-08-18\", \"time\": \"20:30\"},\n",
        "            {\"reservation_id\": \"1006\", \"customer_name\": \"Sara Conti\", \"phone\": \"3376543210\", \"num_people\": 4, \"date\": \"2024-08-19\", \"time\": \"21:15\"},\n",
        "            {\"reservation_id\": \"1007\", \"customer_name\": \"Giovanni Russo\", \"phone\": \"3358765432\", \"num_people\": 6, \"date\": \"2024-08-20\", \"time\": \"19:45\"},\n",
        "            {\"reservation_id\": \"1008\", \"customer_name\": \"Paola Ferri\", \"phone\": \"3398765432\", \"num_people\": 3, \"date\": \"2024-08-21\", \"time\": \"20:00\"},\n",
        "            {\"reservation_id\": \"1009\", \"customer_name\": \"Alessandro Mancini\", \"phone\": \"3347654321\", \"num_people\": 2, \"date\": \"2024-08-22\", \"time\": \"19:30\"},\n",
        "            {\"reservation_id\": \"1010\", \"customer_name\": \"Elena De Luca\", \"phone\": \"3361234567\", \"num_people\": 4, \"date\": \"2024-08-23\", \"time\": \"20:15\"},\n",
        "            {\"reservation_id\": \"1011\", \"customer_name\": \"Elena De Loris\", \"phone\": \"3361234555\", \"num_people\": 2, \"date\": \"2025-05-28\", \"time\": \"20:15\"},\n",
        "            {\"reservation_id\": \"1012\", \"customer_name\": \"Jennie Shi\", \"phone\": \"88888888\", \"num_people\": 5, \"date\": \"2025-07-04\", \"time\": \"18:15\"},\n",
        "        ]\n",
        "\n",
        "    def get_reservation_by_id(self, id):\n",
        "        \"\"\"Retrieves a reservation by its unique ID.\n",
        "\n",
        "        Args:\n",
        "            id (str): The reservation ID to search for.\n",
        "\n",
        "        Returns:\n",
        "            dict: The reservation dictionary if found, otherwise None.\n",
        "        \"\"\"\n",
        "        for reservation in self.reservations:\n",
        "            if reservation[\"reservation_id\"] == id:\n",
        "                return reservation\n",
        "        return None\n",
        "\n",
        "    def get_reservation(self, key, value):\n",
        "        \"\"\"Retrieves a reservation by a given key and value.\n",
        "\n",
        "        This method can search for reservations by 'customer_name' or 'date'.\n",
        "        It validates the date format if the key is 'date'.\n",
        "\n",
        "        Args:\n",
        "            key (str): The attribute to search by (e.g., 'customer_name', 'date').\n",
        "            value (str): The value to match for the specified attribute.\n",
        "\n",
        "        Returns:\n",
        "            dict: The reservation dictionary if found.\n",
        "            str: A message indicating that the reservation was not found.\n",
        "            None: If the date format is invalid.\n",
        "\n",
        "        Raises:\n",
        "            ValueError: If the provided key is not supported.\n",
        "        \"\"\"\n",
        "        print(key)\n",
        "        if key == \"customer_name\":\n",
        "            value = value.title()\n",
        "            print(value)\n",
        "\n",
        "        if key == \"date\":\n",
        "            is_date_valid = verify_date(value)\n",
        "            print(is_date_valid)\n",
        "            if not is_date_valid:\n",
        "                print(\"Invalid date format.\")\n",
        "                return None\n",
        "\n",
        "        if key in {\"customer_name\", \"date\"}:\n",
        "            for reservation in self.reservations:\n",
        "                if reservation[key] == value:\n",
        "                    return reservation\n",
        "            return f\"Couldn't find a reservation with {key} of {value}\"\n",
        "        else:\n",
        "            raise ValueError(f\"Invalid key: {key}\")\n",
        "\n",
        "    def get_last_id(self):\n",
        "        \"\"\"Gets the last reservation ID and increments it by one.\n",
        "\n",
        "        Returns:\n",
        "            int: The next available reservation ID.\n",
        "        \"\"\"\n",
        "        last_id = int(self.reservations[-1][\"reservation_id\"]) + 1\n",
        "        return last_id\n",
        "\n",
        "    def add_reservation(self, customer_name, phone, num_people, date, time):\n",
        "        \"\"\"Adds a new reservation to the list.\n",
        "\n",
        "        Args:\n",
        "            customer_name (str): The name of the customer.\n",
        "            phone (str): The phone number of the customer.\n",
        "            num_people (int): The number of people for the reservation.\n",
        "            date (str): The date of the reservation in 'YYYY-MM-DD' format.\n",
        "            time (str): The time of the reservation in 'HH:MM' format.\n",
        "\n",
        "        Returns:\n",
        "            dict: The newly created reservation record.\n",
        "        \"\"\"\n",
        "        new_id = self.get_last_id()\n",
        "        record = {'reservation_id': new_id, 'customer_name': customer_name, 'phone': phone, 'num_people': int(num_people), 'date': date, 'time': time}\n",
        "        self.reservations.append(record)\n",
        "        print(f\"New record added: {record}\")\n",
        "        return record\n",
        "\n",
        "    def cancel_reservation(self, id_reservation):\n",
        "        \"\"\"Cancels a reservation by its ID.\n",
        "\n",
        "        Args:\n",
        "            id_reservation (str): The ID of the reservation to cancel.\n",
        "\n",
        "        Returns:\n",
        "            str: A message indicating the result of the cancellation.\n",
        "        \"\"\"\n",
        "        reservation = self.get_reservation_by_id(id_reservation)\n",
        "        if reservation:\n",
        "            self.reservations.remove(reservation)\n",
        "            return f\"Reservation {id_reservation} removed successfully.\"\n",
        "        else:\n",
        "            return f\"Reservation {id_reservation} not found.\"\n"
      ],
